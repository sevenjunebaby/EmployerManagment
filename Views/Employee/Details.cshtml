@model Employee

@{
    ViewData["Title"] = "Détails Employé";
}

<h2>Détails Employé</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Departement</th>
        <td>@Model.Departement</td>
    </tr>
    <tr>
        <th>Salary</th>
        <td>@Model.Salary</td>
    </tr>
</table>

<a href="/Employee/Edit/@Model.Id" class="btn btn-warning">Editer</a>
<a href="/Employee/Index" class="btn btn-secondary">Retour</a>
